{
  "name": "ink-sdl",
  "version": "0.3.2",
  "description": "Render Ink terminal apps in native SDL windows",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "ink-sdl": "./dist/cli.js"
  },
  "files": [
    "dist",
    "src/fonts"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "demo": "tsx src/cli.tsx",
    "build": "tsup src/index.ts src/cli.tsx --format esm --dts --clean",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "test": "vitest",
    "check": "prettier --write src/ && eslint src/ --fix && tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "terminal",
    "tui",
    "sdl",
    "ink",
    "react",
    "cli"
  ],
  "author": "Derek Petersen",
  "license": "MIT",
  "packageManager": "pnpm@10.28.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "koffi": "^2.9.3",
    "remeda": "^2.33.4"
  },
  "peerDependencies": {
    "ink": "^5.0.0 || ^6.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.1",
    "@types/react": "^19.2.10",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "eslint-plugin-prefer-arrow-functions": "^3.4.1",
    "ink": "^6.6.0",
    "prettier": "^3.4.2",
    "react": "^19.2.4",
    "tsup": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
